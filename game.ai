<!DOCTYPE html>
<html>
<head>
  <title>Hill Climb Racing</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.2/p5.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@3.18.0/dist/tf.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@tensorflow-models/handpose@0.0.7/dist/handpose.min.js"></script>
  <style>
    body { margin: 0; display: flex; justify-content: center; align-items: center; height: 100vh; background: #87CEEB; }
    canvas { border: 2px solid #000; }
    #instructions { position: absolute; top: 10px; left: 10px; color: white; font-family: Arial; font-size: 16px; }
    #webcam { position: absolute; top: 10px; right: 10px; }
  </style>
</head>
<body>
<div id="instructions">
  <p>Controls:</p>
  <p>- Hand: Tilt left/right to move, raise/lower to rotate</p>
  <p>- Touch: Left side to brake, right side to accelerate, top to rotate up, bottom to rotate down</p>
  <p>- Keyboard: Left/Right arrows to move, Up/Down to rotate</p>
  <p>- Press R to restart after game over</p>
</div>
<script>
let car;
let terrain = [];
let coins = [];
let offset = 0;
let score = 0;
let fuel = 100;
let gameOver = false;
let video;
let handpose;
let predictions = [];

function preload() {
  video = createCapture(VIDEO, () => console.log('Webcam loaded'));
  video.size(160, 120); // Reduced for performance
  video.id('webcam');
  video.hide();
  handpose = ml5.handpose(video, () => console.log('Handpose model loaded'));
  handpose.on('predict', results => {
    predictions = results;
  });
}

function setup() {
  createCanvas(min(windowWidth, 800), min(windowHeight, 400));
  car = new Car();
  generateTerrain();
  generateCoins();
}

function draw() {
  background(135, 206, 235);
  drawTerrain();
  drawCoins();
  car.update();
  car.show();
  updateScore();
  displayFuel();
  handleGestures();
  handleTouch();
  if (gameOver) {
    textSize(32);
    textAlign(CENTER);
    fill(255, 0, 0);
    text("Game Over! Score: " + floor(score) + "\nPress R to Restart", width / 2, height / 2);
  }
  if (video.loadedmetadata) {
    image(video, width - 160, 0, 160, 120);
  }
}

function keyPressed() {
  if (keyCode === LEFT_ARROW) {
    car.accelerate(-0.1);
  } else if (keyCode === RIGHT_ARROW) {
    car.accelerate(0.1);
  } else if (keyCode === UP_ARROW) {
    car.rotate(-0.05);
  } else if (keyCode === DOWN_ARROW) {
    car.rotate(0.05);
  } else if (keyCode === 82 && gameOver) { // 'R' key
    resetGame();
  }
}

function keyReleased() {
  if (keyCode === LEFT_ARROW || keyCode === RIGHT_ARROW) {
    car.accelerate(0);
  }
}

function touchStarted() {
  return false; // Prevent default touch behavior
}

function handleGestures() {
  if (predictions.length > 0) {
    let hand = predictions[0];
    let wrist = hand.landmarks[0];
    let indexTip = hand.landmarks[8];
    let tilt = atan2(indexTip[1] - wrist[1], indexTip[0] - wrist[0]);
    if (tilt > PI / 4) {
      car.accelerate(0.1);
    } else if (tilt < -PI / 4) {
      car.accelerate(-0.1);
    } else {
      car.accelerate(0);
    }
    let handY = wrist[1];
    if (handY < 50) {
      car.rotate(-0.05);
    } else if (handY > 70) {
      car.rotate(0.05);
    }
  }
}

function handleTouch() {
  for (let touch of touches) {
    if (touch.x < width / 2) {
      car.accelerate(-0.1); // Left side: brake
    } else {
      car.accelerate(0.1); // Right side: accelerate
    }
    if (touch.y < height / 2) {
      car.rotate(-0.05); // Top half: rotate up
    } else {
      car.rotate(0.05); // Bottom half: rotate down
    }
  }
}

class Car {
  constructor() {
    this.x = 100;
    this.y = 200;
    this.vx = 0;
    this.vy = 0;
    this.angle = 0;
    this.accel = 0;
    this.width = 40;
    this.height = 20;
  }

  update() {
    if (!gameOver) {
      this.vx += this.accel;
      this.x += this.vx;
      this.vy += 0.2;
      this.y += this.vy;
      fuel -= 0.05;
      if (this.accel !== 0) fuel -= 0.1;
      if (fuel <= 0) {
        fuel = 0;
        gameOver = true;
      }
      let terrainY = getTerrainHeight(this.x);
      if (this.y + this.height / 2 > terrainY) {
        this.y = terrainY - this.height / 2;
        this.vy = 0;
        let prevY = getTerrainHeight(this.x - 10);
        this.angle = atan2(terrainY - prevY, 10);
      }
      if (abs(this.angle) > PI / 2) {
        gameOver = true;
      }
      if (this.x > width / 2) {
        offset += this.vx;
      }
      for (let i = coins.length - 1; i >= 0; i--) {
        let coin = coins[i];
        let d = dist(this.x - offset, this.y, coin.x, coin.y);
        if (d < this.width / 2 + 10) {
          coins.splice(i, 1);
          score += 10;
          fuel = min(fuel + 20, 100);
        }
      }
    }
  }

  show() {
    push();
    translate(this.x - offset, this.y);
    rotate(this.angle);
    fill(255, 0, 0);
    rect(-this.width / 2, -this.height / 2, this.width, this.height); // Body
    fill(0);
    ellipse(-this.width / 3, this.height / 2, 10, 10); // Left wheel
    ellipse(this.width / 3, this.height / 2, 10, 10); // Right wheel
    pop();
  }

  accelerate(a) {
    this.accel = a;
  }

  rotate(a) {
    this.angle += a;
  }
}

function generateTerrain() {
  terrain = [];
  for (let x = 0; x < 2000; x++) {
    let y = noise(x * 0.01) * 200 + 150;
    terrain.push(y);
  }
}

function drawTerrain() {
  fill(0, 128, 0);
  beginShape();
  vertex(0, height);
  for (let x = 0; x < terrain.length; x++) {
    let screenX = x - offset;
    if (screenX > -10 && screenX < width + 10) {
      vertex(screenX, terrain[x]);
    }
  }
  vertex(width, height);
  endShape(CLOSE);
}

function generateCoins() {
  coins = [];
  for (let x = 100; x < 2000; x += 200) {
    let y = getTerrainHeight(x + offset) - 30;
    coins.push({ x: x - offset, y });
  }
}

function drawCoins() {
  fill(255, 215, 0);
  for (let coin of coins) {
    ellipse(coin.x, coin.y, 10, 10);
  }
}

function getTerrainHeight(x) {
  let index = floor(x + offset);
  if (index >= 0 && index < terrain.length - 1) {
    let t = (x + offset) - index;
    return lerp(terrain[index], terrain[index + 1], t);
  }
  return height;
}

function updateScore() {
  if (!gameOver) {
    score += 0.1;
  }
  textSize(20);
  textAlign(LEFT);
  fill(0);
  text("Score: " + floor(score), 10, 30);
}

function displayFuel() {
  fill(0, 0, 255);
  rect(10, 50, fuel, 10);
  textSize(16);
  textAlign(LEFT);
  fill(0);
  text("Fuel", 10, 70);
}

function resetGame() {
  car = new Car();
  offset = 0;
  score = 0;
  fuel = 100;
  gameOver = false;
  generateTerrain();
  generateCoins();
}
</script>
</body>
</html>
